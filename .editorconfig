# http://editorconfig.org

root = true

# 对所有的文件可用
[*]
charset = utf-8
indent_style = tab
indent_size = 4
# 换行符格式
end_of_line = lf
# 是否在文件的最后插入一个空行
insert_final_newline = true
# 是否删除行尾的空行
trim_trailing_whitespace = true

# 对后缀为 md的文件有效
[*.md]
insert_final_newline = false
trim_trailing_whitespace = false